<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:id="@+id/iv_check_icon_plan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_check_circle_24"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/authentication_screen_content_marginTop"
                android:layout_alignParentEnd="true"
                android:elevation="9dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plans_1"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginStart="@dimen/authentication_screen_content_marginTop"
                android:layout_marginEnd="@dimen/authentication_screen_content_marginTop"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/portal_card_view_margin_bottom"
                android:backgroundTint="@color/light_gray2">

                <LinearLayout
                    android:id="@+id/ll_portal_classes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Plan Inicio"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/dark_gray1"
                        android:background="@color/light_gray1"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="40sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/epp_primary"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DAYS/WEEK"
                                android:textSize="10sp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:textColor="@color/dark_gray1"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/dark_gray1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="$"
                                android:textSize="20sp"
                                android:fontFamily="@font/montserrat"
                                android:layout_gravity="top"
                                android:textColor="@color/epp_primary"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:text="25.5"
                                android:textSize="44sp"
                                android:textStyle="bold"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/epp_primary"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="USD/MES"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginStart="2dp"
                            android:gravity="top|center_horizontal"
                            android:textColor="@color/dark_gray1"

                            />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:layout_marginBottom="20dp"
                >

                <ImageView
                    android:id="@+id/iv_check_icon_plan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_check_circle_24"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="@dimen/authentication_screen_content_marginTop"
                    android:layout_alignParentEnd="true"
                    android:elevation="9dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_plans_2"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginStart="@dimen/authentication_screen_content_marginTop"
                    android:layout_marginEnd="@dimen/authentication_screen_content_marginTop"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="@dimen/portal_card_view_margin_bottom"
                    android:backgroundTint="@color/light_gray2">

                    <LinearLayout
                        android:id="@+id/ll_portal_classes2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:text="Plan Semanal"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/dark_gray1"
                            android:background="@color/light_gray1"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_gray1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="40sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/open_sans"
                                    android:textColor="@color/epp_primary"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DAYS/WEEK"
                                    android:textSize="10sp"
                                    android:fontFamily="@font/montserrat"
                                    android:gravity="center"
                                    android:textColor="@color/dark_gray1"
                                    />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/dark_gray1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="$"
                                        android:textSize="20sp"
                                        android:fontFamily="@font/montserrat"
                                        android:layout_gravity="top"
                                        android:textColor="@color/epp_primary"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="55dp"
                                        android:text="35"
                                        android:textSize="44sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="bottom"
                                        android:fontFamily="@font/open_sans"
                                        android:textColor="@color/epp_primary"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="USD/MES"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginStart="2dp"
                                    android:gravity="top|center_horizontal"
                                    android:textColor="@color/dark_gray1"

                                    />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>