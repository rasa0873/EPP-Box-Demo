<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.fragments.ProfileScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/light_gray1"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/black_playlist_add_check_24"
                    android:background="@drawable/layout_rounded_corners_background"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Plata 3 dÃ­as"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/dark_gray1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/plan"
                    android:gravity="bottom|end"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightBlue2"
                android:padding="10dp">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/black_savings_24"
                    android:background="@drawable/layout_rounded_corners_background"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:text="35"
                    android:layout_gravity="center"
                    android:textSize="36sp"
                    android:textStyle="normal"
                    android:textColor="@color/dark_gray1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/balance"
                    android:gravity="bottom|end"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_gray1"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/active"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/epp_primary"/>




</LinearLayout>