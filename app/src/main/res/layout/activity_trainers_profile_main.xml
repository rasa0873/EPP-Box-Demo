<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <!-- Profile 1 -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/nav_content_margin_StartEnd"
                android:layout_marginEnd="@dimen/nav_content_margin_StartEnd"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/portal_card_view_margin_bottom"
                android:backgroundTint="@color/white">

                <!-- Add your CardView content here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ernesto_carrera"
                        android:textColor="@color/dark_gray1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center|start"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/entrenador_l2"
                        android:textColor="@color/dark_gray1"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center|start"
                        android:layout_marginBottom="10dp"
                        android:textStyle="normal"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray3"
                        android:layout_marginBottom="18dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:src="@drawable/ernesto_2"
                        android:scaleType="centerCrop"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="24dp"
                        android:paddingStart="0dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/ernesto_carrera_details"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_ernesto_ig_link"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="7dp"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/instagram_icon_48"
                            />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray3"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="0dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Profile 2 -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/nav_content_margin_StartEnd"
                android:layout_marginEnd="@dimen/nav_content_margin_StartEnd"
                app:cardCornerRadius="2dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/portal_card_view_margin_bottom"
                android:backgroundTint="@color/white">

                <!-- Add your CardView content here -->
                <LinearLayout
                    android:id="@+id/ll_portal_classes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gabriela_teran"
                        android:textColor="@color/dark_gray1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center|start"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atleta y entrenadora"
                        android:textColor="@color/dark_gray1"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center|start"
                        android:layout_marginBottom="10dp"
                        android:textStyle="normal"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray3"
                        android:layout_marginBottom="18dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:src="@drawable/trainers_3_small"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="24dp"
                        android:paddingStart="0dp"
                        android:fontFamily="@font/open_sans"
                        android:text="Bio de Gaby"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/dark_gray1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_gaby_ig_link"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="7dp"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/instagram_icon_48"
                            />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray3"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="18dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>