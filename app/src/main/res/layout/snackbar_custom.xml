<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:padding="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/snackBar_icon_layout"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/error_red2"

            >
            <ImageView
                android:id="@+id/iv_snackBar_custom_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/white_warning_24"
                android:padding="@dimen/snackBar_text_image_padding"
                />

        </LinearLayout>


        <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:layout_height="match_parent"
        android:background="@color/light_gray2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_snackBar_c"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="SNACKBAR TEXT"
            android:textColor="@color/primary_text_color"
            android:gravity="start|center"
            android:padding="@dimen/snackBar_text_image_padding"
             />



    </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>
